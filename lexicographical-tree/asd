
inline void printTree(Node *nNode, int pos){
  if (nNode == NULL) {
    for (int i = 0; i < pos; i++)
      printf("\t");
    printf("*\n");
    return;
  }
  printTree(nNode->right, pos+1);
  for (int i = 0; i < pos; i++)
    printf("\t");
  printf("%c\n", nNode->value);
  printTree(nNode->left, pos+1);
}
